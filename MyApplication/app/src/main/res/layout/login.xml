<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="欢迎登陆XXX系统"
        android:textSize="40sp"
        android:textColor="@color/colorPrimaryDark"
        >

    </TextView>
    <TextView
        android:id="@+id/Text_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学号:"
        android:textSize="33sp"
        android:layout_marginTop="200dp"
        >

    </TextView>
    <EditText
        android:id="@+id/Edit_ID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Text_ID"
        android:layout_marginBottom="-10dp"
        android:layout_marginStart="80dp"
        android:hint="请输入你的学号"
        android:textSize="33sp"
        >

    </EditText>
    <TextView
        android:id="@+id/Text_PWD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码:"
        android:textSize="33sp"
        android:layout_marginTop="300dp"
        >
    </TextView>
    <EditText
        android:id="@+id/Edit_PWD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Text_PWD"
        android:layout_marginBottom="-10dp"
        android:layout_marginStart="80dp"
        android:hint="请输入你的密码"
        android:textSize="33sp">
    </EditText>
    <TextView
        android:id="@+id/Text_Verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:text="验证码:"
        android:textSize="33sp">
    </TextView>
    <EditText
        android:id="@+id/Edit_Verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Text_Verify"
        android:layout_marginBottom="-10dp"
        android:layout_marginStart="105dp"
        android:hint="验证码"
        android:textSize="33sp">
    </EditText>
    <ImageView
        android:id="@+id/verifyImage"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/Edit_Verify"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="240dp"
        android:src="@drawable/verifycodeimg">
    </ImageView>
    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_marginTop="500dp">

    </Button>
</RelativeLayout>